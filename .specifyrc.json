{
    "repository": "@okcoin/okdl-specifytest",
    "head": "main",
    "rules": [
      {
        "name": "Design Tokens / Colors",
        "path": "assets/styles/variables/colors.scss",
        "filter": {
          "types": ["color"]
        },
        "parsers": [
          {
            "name": "replace-string",
            "options": {
              "keys": ["name"],
              "regex": {
                "pattern": "\\.",
                "flags": "g"
              },
              "trim": true,
              "replaceBy": "-"
            }
          },
          {
            "name": "to-css-custom-properties"
          }
        ]
      }
    ]
  }
