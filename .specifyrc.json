{
    "repository": "@okcoin/okdl-specifytest",
    "head": "specify",
    "rules": [
      {
        "name": "Design Tokens / Colors",
        "path": "assets/styles/variables/colors.scss",
        "filter": {
          "types": ["color"]
        },
        "parsers": [
          {
            "name": "replace-string",
            "options": {
              "keys": ["name"],
              "regex": {
                "pattern": "\\.",
                "flags": "g"
              },
              "trim": true,
              "replaceBy": "-"
            }
          },
          {
            "name": "to-css-custom-properties"
          }
        ]
      },
      {
        "name": "Assets / Icons",
        "path": "assets/",
        "filter": {
          "types": ["vector"]
        },
        "parsers":[
          {
            "name": "replace-string",
            "options": {
              "keys": ["name"],
              "regex": {
                "pattern": "\\.",
                "flags": "g"
              },
              "trim": true,
              "replaceBy": "/"
            }
          },
          {
            "name": "svgo",
            "options": {
              "plugins": [
                {
                  "removeDimensions": true
                }
              ]
            }
          }
        ]
      }
    ]
  }
